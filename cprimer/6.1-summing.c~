#include <stdio.h>
int main(int argc, const char *argv[])
{
    long num;
    long sum = 0L;
    int status;

    printf("Please enter an integer to be summed. ");
    printf("(q to quit): ");
    status = scanf("%ld", &num);
    while (status == 1) {
        sum = sum + num;
        printf("Please enter anin teger to be summed.");
        printf("(q to quit): ");
        status = scanf("%ld", &num);
    }
    printf("Those integer sum to %ld.\n", sum);
    return 0;
}
