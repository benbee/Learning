#include <stdio.h>

float cal_average(int sum, int num);

int main(int argc, char *argv[])
{
    int even_cnt;		/* even like 2 */
    int odd_cnt;		/* odd like 3 */
    int even_sum;
    int odd_sum;
    int num;

    printf("Please enter sum numbers for analysis: \n");
    scanf("%d", &num);
    while (num != 0) {
	if (num % 2 == 0) {
	    even_sum += num;
	    even_num++;
	} else {
	    odd_sum += num;
	    odd_num++;
	}
	scanf("%d", &num);
    }

    printf("There %s %d %s, average is %f.\n", even_cnt>=2?"are":"is", even_cnt, even_cnt>=2?"evens":"even", cal_average(even_sum, even_cnt));
    printf("And there %s %d %s, average is %f\n", odd_cnt>=2?"are":"is", odd_cnt, odd_cnt>=2?"odds","odd", cal_average(odd_sum, odd_cnt);
    
    return 0;
}
